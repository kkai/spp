<div id="password-gate" class="fixed inset-0 z-[9999] flex items-center justify-center bg-gray-950/95 backdrop-blur-sm" style="display:none;">
  <div class="w-full max-w-sm px-6">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-white mb-2">SPP Explorer</h1>
      <p class="text-gray-400 text-sm">Enter password to continue</p>
    </div>
    <form id="gate-form" class="flex gap-2">
      <input
        id="gate-input"
        type="password"
        autocomplete="off"
        placeholder="Password"
        class="flex-1 rounded-lg border border-gray-700 bg-gray-800 px-4 py-2.5 text-white placeholder-gray-500 focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
      />
      <button
        type="submit"
        class="rounded-lg bg-blue-600 px-5 py-2.5 font-medium text-white hover:bg-blue-500 transition-colors"
      >
        Enter
      </button>
    </form>
    <p id="gate-error" class="mt-3 text-center text-sm text-red-400 hidden">Incorrect password</p>
  </div>
</div>

<script is:inline>
(function() {
  const KEY = 'spp-auth';
  const gate = document.getElementById('password-gate');
  if (sessionStorage.getItem(KEY)) return;
  gate.style.display = 'flex';
  document.body.style.overflow = 'hidden';
  document.getElementById('gate-form').addEventListener('submit', function(e) {
    e.preventDefault();
    var input = document.getElementById('gate-input');
    if (input.value === 'wearable') {
      sessionStorage.setItem(KEY, '1');
      gate.style.display = 'none';
      document.body.style.overflow = '';
    } else {
      document.getElementById('gate-error').classList.remove('hidden');
      input.value = '';
      input.focus();
    }
  });
  document.getElementById('gate-input').focus();
})();
</script>
