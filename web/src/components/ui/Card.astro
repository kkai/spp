---
interface Props {
  href?: string;
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
  [key: string]: any;
}

const { href, class: className = '', padding = 'md', ...attrs } = Astro.props;
const Tag = href ? 'a' : 'div';
const paddings = { sm: 'p-4', md: 'p-6', lg: 'p-8' };
---

<Tag
  href={href}
  {...attrs}
  class:list={[
    'block rounded-xl border transition-all duration-200',
    href && 'hover:border-primary-500/50 hover:shadow-lg hover:shadow-primary-500/5',
    paddings[padding],
    className,
  ]}
  style={`background: var(--surface-1); border-color: var(--border);`}
>
  <slot />
</Tag>
