---
interface Props {
  value: string | number;
  label: string;
  color?: string;
}

const { value, label, color } = Astro.props;
---

<div class="text-center">
  <div
    class="text-4xl sm:text-5xl font-extrabold tracking-tight font-mono"
    style={color ? `color: ${color}` : `color: var(--text-primary)`}
  >
    {value}
  </div>
  <div class="mt-2 text-sm font-medium" style="color: var(--text-secondary);">
    {label}
  </div>
</div>
